<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreatCrowler.MainPage">
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout HeightRequest="600"
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="Start">
                <Editor WidthRequest="400" AutoSize="TextChanges" x:Name="Domains"  />
                <Button
                x:Name="GetEmailsBtn"
                Text="Get Emails >>"
                Clicked="OnGetEmailsClicked" />
                <Editor WidthRequest="800" AutoSize="TextChanges" x:Name="Emails"  />
            </HorizontalStackLayout>
            <ProgressBar x:Name="SearchProgress" HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
